{
    "name": "zentlix/user",
    "type": "zentlix-package",
    "description": "Provides the ability to manage users, access rights.",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "spiral/console": "^3.7",
        "spiral/logger": "^3.7",
        "spiral/translator": "^3.7",
        "spiral/boot": "^3.7",
        "spiral/config": "^3.7",
        "spiral-packages/cqrs": "^2.2",
        "spiral-packages/symfony-validator": "^1.3",
        "cycle/orm": "^2.3",
        "cycle/annotated": "^3.2",
        "zentlix/broadway": "^1.0",
        "ramsey/uuid": "^4.7",
        "doctrine/collections": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "friendsofphp/php-cs-fixer": "^3.8",
        "spiral/testing": "^2.3",
        "vimeo/psalm": "^5.11"
    },
    "autoload": {
        "psr-4": {
            "Zentlix\\User\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zentlix\\User\\Tests\\": "tests/src"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "psalm": "vendor/bin/psalm --config=psalm.xml ./src",
        "cs": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php -vvv --dry-run --using-cache=no"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "spiral/composer-publish-plugin": true
        }
    },
    "extra": {
        "spiral": {
            "bootloaders": [
                "Zentlix\\User\\Infrastructure\\Group\\Bootloader\\EventSourcingBootloader",
                "Zentlix\\User\\Infrastructure\\Group\\Bootloader\\ReadModelBootloader",
                "Zentlix\\User\\Infrastructure\\Group\\Bootloader\\SpecificationBootloader",
                "Zentlix\\User\\Infrastructure\\Group\\Bootloader\\ValidationBootloader",
                "Zentlix\\User\\Infrastructure\\Locale\\Bootloader\\EventSourcingBootloader",
                "Zentlix\\User\\Infrastructure\\Locale\\Bootloader\\ReadModelBootloader",
                "Zentlix\\User\\Infrastructure\\Locale\\Bootloader\\SpecificationBootloader",
                "Zentlix\\User\\Infrastructure\\Locale\\Bootloader\\ValidationBootloader",
                "Zentlix\\User\\Infrastructure\\Shared\\Bootloader\\I18nBootloader"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
