{% extends 'admin:layout/page.twig' %}

{% block title %}{{ 'user.locale.languages' | trans }}{% endblock %}

{% block body %}
    <div class="sf-heading">
        <nav class="sf-breadcrumb" aria-label="breadcrumb">
            <ul class="sf-breadcrumb__list">
                <li class="sf-breadcrumb__item"><a href="{{ path('admin.dashboard') }}">{{ 'user.dashboard' | trans }}</a></li>
                <li class="sf-breadcrumb__item">{{ 'user.settings' | trans }}</li>
                <li class="sf-breadcrumb__item active" aria-current="page">{{ 'user.locale.languages' | trans }}</li>
            </ul>
        </nav>
        <h1>{{ 'user.locale.languages' | trans }}</h1>
    </div>
    <div class="sf-main__wrapper">
        {{ dataGrid('admin-locales', path('admin.locale.list')) }}
    </div>
{% endblock %}
